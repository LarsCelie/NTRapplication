<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.hu.team.ntrapplication.activities.InlogActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/gebruikersnaam"
        android:id="@+id/gebruikersnaam"
        android:layout_above="@+id/gebruikersnaamtext"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gebruikersnaamtext"
        android:layout_above="@+id/wachtwoord"
        android:layout_alignLeft="@+id/wachtwoortext"
        android:layout_alignStart="@+id/wachtwoortext"
        android:layout_alignRight="@+id/wachtwoortext"
        android:layout_alignEnd="@+id/wachtwoortext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/wachtwoord"
        android:id="@+id/wachtwoord"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/wachtwoortext"
        android:layout_below="@+id/wachtwoord"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="@string/inloggen"
        android:background="@drawable/buttonshape"
        android:id="@+id/loginbutton"
        android:onClick="loginUser"
        android:layout_below="@+id/wachtwoortext"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/buttonshape"
        android:text="Registreren"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="navigateToRegisterActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nog geen Account?"
        android:textColor="#35acbc"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
