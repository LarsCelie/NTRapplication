<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.hu.team.ntrapplication.activities.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registreren"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Voornaam"
        android:ems="10"
        android:id="@+id/voornaamEditText"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Achternaam"
        android:ems="10"
        android:id="@+id/achternaamEditText"
        android:layout_below="@+id/voornaamEditText"
        android:layout_alignLeft="@+id/voornaamEditText"
        android:layout_alignStart="@+id/voornaamEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailEditText"
        android:layout_below="@+id/achternaamEditText"
        android:layout_alignLeft="@+id/achternaamEditText"
        android:layout_alignStart="@+id/achternaamEditText"
        android:text="E-mailadres" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Gebruikersnaam"
        android:ems="10"
        android:id="@+id/gebruikersnaamEditText"
        android:layout_below="@+id/emailEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/wachtwoordEditText"
        android:layout_below="@+id/gebruikersnaamEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="wachtwoord" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/controleWachtwoordEditText"
        android:layout_below="@+id/wachtwoordEditText"
        android:layout_centerHorizontal="true"
        android:text="controle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registreren"
        android:id="@+id/registerButton"
        android:layout_below="@+id/controleWachtwoordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:onClick="registerUser" />

</RelativeLayout>
